// メッセージの更新

var state = document.getElementById('state_btn-<%= @task.id %>')
var limit = document.getElementById('limit-<%= @task.id %>')
var content = document.getElementById('content-<%= @task.id %>')

state.innerHTML = '<%= @task.state %>'
limit.innerHTML = '<%= @task.limit %>'
content.innerHTML = '<%= @task.content %>'


// フォームを新規投稿フォームに戻す
var form = document.getElementsByTagName('form')[0]
form.outerHTML = '<%= j(render 'form', task: Task.new, value: '投稿') %>'



// モーダルを閉じる動作 ========================================

// モーダルを取得
var modal = document.getElementById('exampleModal')
// モーダルを表示させているクラスを削除
modal.classList.remove('fade')
modal.classList.remove('show')
// モーダルのdisplayを'none'にする
modal.style.display = 'none'

// 背景の透過した黒いレイヤーを取得・削除
var backdrop = document.getElementsByClassName('modal-backdrop')[0]
backdrop.remove()

// bodyタグの'modal-open'クラスを削除
var body = document.getElementsByTagName('body')[0]
body.classList.remove('modal-open')

