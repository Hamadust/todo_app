<div class="task-content col-md-10 offset-md-1" id="task-<%= task.id %>">

  <!-- ステータス -->
  <%= link_to "/change/#{task.id}", method: "post", class: "state btn btn-primary col-md-1", id: "state_btn-#{task.id}", data: { remote: true } do %>
    <span><%= task.state %></span>
  <% end%>

  <!-- デッドライン -->
  <p class="limit col-md-2" id="limit-<%= task.id %>"><%= task.limit %></p>

  <!-- タスク内容 -->
  <p class= "content col-md-6" id="content-<%= task.id %>"><%= task.content %></p>

  <!-- 編集・削除 -->
  <!-- モーダルのトリガーボタン -->
  <div class="btn-area col-md-2">
  <%= link_to '編集',
                edit_task_path(task),
                data: { remote: true },
                class: "btn btn-primary",
                id: "editButton-#{task.id}",
                "data-bs-toggle" => "modal",
                "data-bs-target" => "#exampleModal" %>

  <%= link_to '削除', task_path(task),
              method: :delete,
              data: { confirm: '削除しますか?', remote: true },
              class: "btn btn-secondary" %>
  </div>
</div>
